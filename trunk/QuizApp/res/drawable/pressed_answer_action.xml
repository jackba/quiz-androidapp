<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="oval">
            <solid android:color="#3898d2" />

            <stroke android:width="2dp" android:color="#3898d2" />

            <corners android:radius="3dp" />
        </shape></item>
    <item><shape android:shape="oval">
            <gradient android:angle="270" android:endColor="#fff" android:startColor="#fff" />

            <stroke android:width="2dp" android:color="#3898d2" />

            <corners android:radius="4dp" />
        </shape></item>

</selector>