<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3598db"
    android:orientation="vertical"
    tools:context="com.nvn.quizapp.MainActivity"
    tools:ignore="MergeRootFrame" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/imv_logo"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:background="@drawable/pressed_holo_action" />

            <Button
                android:id="@+id/btn_register"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/pressed_signup_action"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="Sign Up"
                android:textColor="#fff" />

            <Button
                android:id="@+id/btn_signup"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/pressed_register_action"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="Sign In"
                android:textColor="#fff" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>