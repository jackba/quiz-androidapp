<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3598db"
    android:orientation="vertical"
    tools:context="com.nvn.quizapp.MainActivity"
    tools:ignore="MergeRootFrame" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imv_logo"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:textSize="30px" />

    <ImageView
        android:id="@+id/imv_logo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/pressed_holo_action"
        android:clickable="true" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="320px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imv_logo"
        android:layout_centerHorizontal="true"
        android:background="@drawable/pressed_register_action"
        android:paddingBottom="10px"
        android:paddingTop="10px"
        android:text="@string/register_with_facebook"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="320px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5px"
        android:background="@drawable/pressed_signup_action"
        android:paddingBottom="10px"
        android:paddingTop="10px"
        android:text="@string/signup_with_email"
        android:textColor="#fff" />

</RelativeLayout>