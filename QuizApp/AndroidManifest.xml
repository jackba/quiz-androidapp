<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nvn.quizapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity
            android:name="com.nvn.quizapp.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nvn.quizapp.ExamsActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.nvn.quizapp.StartExamsActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.nvn.quizapp.QuestionActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.nvn.quizapp.PauseActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.nvn.quizapp.CompletedActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.nvn.quizapp.AwardsActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.nvn.quizapp.AboutActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.nvn.quizapp.SignInActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.nvn.quizapp.SignUpActivity"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>